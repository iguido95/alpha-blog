<h1 align="center">All Categories</h1>

<div align="center">
  <%= will_paginate %>
</div>

<ul>
  <% @categories.each do |category| %>
  <li>
    <%= link_to category.name, category_path(category) %> -
    <small><%= pluralize(category.articles.count, "article") %></small>
  </li>
  <% end %>
</ul>

<div align="center">
  <%= will_paginate %>
</div>

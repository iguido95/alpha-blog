<h1 align="center">Login</h1>

<div class="row">
	<div class="col-xs-12">

		<%= form_for(:sessions, html: { class: "form-horizontal", role: "form" }, url: login_path) do |f| %>

			<div class="form-group">
				<%= f.label :email, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
					<%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
				</div>
			</div>

      <div class="form-group">
        <%= f.label(:password, class: "control-label col-sm-2")%>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Your password", autocomplete: "off" %>
        </div>
      </div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Login", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>

	</div>
</div>

<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, html: { class: "form-horizontal", role: "form" } ) do |f| %>
			<div class="form-group">
				<%= f.label :username, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
					<%= f.text_field :username, class: "form-control", placeholder: "Your username", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :email, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
					<%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
				</div>
			</div>

      <% if @user.new_record? %>
      <div class="form-group">
        <%= f.label :email_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.email_field :email_confirmation, class: "form-control", placeholder: "Email again for validation" %>
        </div>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.label(:password, @user.new_record? ? "Password" : "New password", class: "control-label col-sm-2")%>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Your password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password again for validation" %>
        </div>
      </div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit(@user.new_record? ? "Register" : "Update account", class: "btn btn-primary") %>

				</div>
			</div>
		<% end %>

	</div>
</div>
